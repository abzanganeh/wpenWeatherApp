<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pcc.barzinzanganeh.alireza.myweatherapp.MainActivity">

    <TextView
        android:id="@+id/txtString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        android:text="Weather Report" />

    <TextView
        android:id="@+id/weather_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtString"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/weather_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_id"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_main"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_description"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="TextView" />

</RelativeLayout>
